@model Estimating_Tool.View_Model.ConsultantEdit

@{
                /**/

                ViewBag.Title = "Edit Consultant";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Consultant</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Consultant.Id)

        <div class="form-group">
            <label>
                @Html.LabelFor(model => model.Consultant.Username)

                @Html.EditorFor(model => model.Consultant.Username, new { htmlAttributes = new { @class = "form-control narrowInput" } })
                @Html.ValidationMessageFor(model => model.Consultant.Username, "", new { @class = "text-danger" })
            </label>

        </div>

        <div class="form-group">
            <label>
                @Html.LabelFor(model => model.Consultant.Firstname)

                @Html.EditorFor(model => model.Consultant.Firstname, new { htmlAttributes = new { @class = "form-control narrowInput" } })
                @Html.ValidationMessageFor(model => model.Consultant.Firstname, "", new { @class = "text-danger" })

            </label>
        </div>

        <div class="form-group">
            <label>
                @Html.LabelFor(model => model.Consultant.Lastname)

                @Html.EditorFor(model => model.Consultant.Lastname, new { htmlAttributes = new { @class = "form-control narrowInput" } })
                @Html.ValidationMessageFor(model => model.Consultant.Lastname, "", new { @class = "text-danger" })

            </label>
        </div>

        <div class="form-group">
            <label>
                @Html.LabelFor(model => model.Managers)

                @*note that the manager ID is passed to the view, and set as a default value, so if a manager is not entered for a consultant, the logged in user is set as the default*@
                @*this should help make maintenance of the tables easier*@
                @Html.DropDownListFor(model => model.Consultant.ManagerId,
               new SelectList(Model.Managers, "Value", "Key", Model.Manager),
               new { @class = "form-control narrowInput" })
            </label>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ToList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
