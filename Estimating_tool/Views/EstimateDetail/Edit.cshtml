@model Estimating_Tool.View_Model.EstimateDetailsVM

@{
				/**/

				ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>EstimateDetail</h4>
		<hr />
		<div class="form-group">
			@Html.LabelFor(model => model.EstimateHeaderId)

			@Html.DropDownListFor(model => model.EstimateHeaderId, Model.EstimateNameList, new  { @class = "dropdownSearch" })
			@Html.ValidationMessageFor(model => model.EstimateHeaderId, "", new { @class = "text-danger" })

		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.LineItemId)

			@Html.DropDownListFor(model => model.LineItemId,Model.LineItemTypeList, new { @class = "dropdownSearch"  })
			@Html.ValidationMessageFor(model => model.LineItemId, "", new { @class = "text-danger" })

		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Estimate)

			@Html.EditorFor(model => model.Estimate, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Estimate, "", new { @class = "text-danger" })

		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Note)

			@Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })

		</div>


		<div class="form-actions no-color">
			<input type="submit" value="Save" class="btn btn-default" /> |
			@Html.ActionLink("Back to List", "Index")
		</div>

	</div>

}
@section scripts{
    <script>
        selectdropdown(".dropdownSearch");
    </script>
